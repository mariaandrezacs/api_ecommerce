[flake8]
ignore =
        E722, W503, E501,W504, D102, D100, D103,
        D101, D107, I100, I101, I201, D200, D400,
        D106, D105, D401, D202, D205, S324, F403,
        F405, F401
max-line-length = 120
per-file-ignores =
    __init__.py: F401,
    apps.py: F401
exclude =
    .git,
    __pycache__,
    old,
    build,
    dist,
    __init__.py,
    migrations,
    settings.py,
    test_settings.py,
    wsgi.py,
    manage.py
    */tests/*
    */tests.py
    venv
